@model kw2.Models.CarRental

@{
    ViewData["Title"] = "Редактирование";
}

<h2>Редактирование</h2>

<h4>Прокат автомобилей</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentId" />
            <div class="form-group">
                Клиент
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Название услуги
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Сотрудник
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Номер автомобиля
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                 Дата выдачи
                <input asp-for="DateOfIssue" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                Срок проката
                <input asp-for="RentalPeriod" class="form-control" />
                <span asp-validation-for="RentalPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                Дата возврата
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                Цена проката
                <input asp-for="PriceRental" class="form-control" />
                <span asp-validation-for="PriceRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                Отметка об услуге
                <input asp-for="PaymentNote" class="form-control" />
                <span asp-validation-for="PaymentNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
